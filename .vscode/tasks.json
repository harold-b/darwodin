{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "${workspaceFolder}/build",
            "args": [
                "-debug"
                // , "-l" 
            ],
            "problemMatcher": "$odin"
        },

        {
            "label": "build-lite",
            "type": "shell",
            "command": "${workspaceFolder}/build",
            "args": [
                "-debug"
                , "-l" 
            ],
            "problemMatcher": "$odin"
        },

        {
            "label": "build-ios",
            "type": "shell",
            "command": "${workspaceFolder}/build",
            "args": [ "-debug", 
                "-ios",
                // "-iphonesim",
                "-l" 
            ],
            "problemMatcher": "$odin",
        },

        {
            "label": "build-iphonesim",
            "type": "shell",
            "command": "${workspaceFolder}/build",
            "args": [ "-debug", "-iphonesim" 
                ,"-l"
            ],
            "problemMatcher": "$odin"
        },

        {
            "label": "build-iphonesim-lib",
            "type": "shell",
            "command": "${workspaceFolder}/build",
            "args": [ "-debug", "-iphonesim", "-obj" 
                ,"-l"
            ],
            "problemMatcher": "$odin"
        }
    ]
}