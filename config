darwodin_out_dir_macos=darwodin-macos
darwodin_out_dir_ios=darwodin-ios
darwodin_lite_suffix=-lite

darwodin_base_frameworks=(
  CoreFoundation
  CoreGraphics
  CoreText
  CoreAudio
  CoreMedia
  IOKit
  DiskArbitration
  Security
  FSEvents
  Foundation
  QuartzCore
  AppKit
  UIKit
  Metal
  ModelIO
  MetalKit
  MetalFX
  GameController
  LocalAuthentication
  CloudKit
  GameKit
  CoreHaptics
  AudioToolbox
  AVFoundation
)

darwodin_macos_frameworks=(
  AppKit
  FSEvents
  DiskArbitration
)

darwodin_ios_frameworks=(
  UIKit
)

appkit_dependent_frameworks=(
  GameKit
  MetalKit
)


function darwodin_get_macos_frameworks()
{
  local frameworks=()
  for f in ${darwodin_base_frameworks[@]}; do
    # If found in iOS frameworks, ignore it
    local ios_match=""
    for ios_f in ${darwodin_ios_frameworks[@]}; do
      if [[ "$f" == "$ios_f" ]]; then
        ios_match=$ios_f
        break
      fi
    done

    if [[ "$f" == "$ios_match" ]]; then
      continue
    fi

    frameworks+=($f)
  done

  printf "%s\n" "${frameworks[@]}"
}

function darwodin_get_ios_frameworks()
{
  local frameworks=()
  for f in ${darwodin_base_frameworks[@]}; do
    # If found in macOS frameworks, ignore it
    local macos_match=""
    for macos_f in ${darwodin_macos_frameworks[@]}; do
      if [[ "$f" == "$macos_f" ]]; then
        macos_match=$macos_f
        break
      fi
    done

    if [[ "$f" == "$macos_match" ]]; then
      continue
    fi

    frameworks+=($f)
  done

  printf "%s\n" "${frameworks[@]}"
}

function darwodin_get_header_for_framework()
{
  framework=$1

  case $framework in
    FSEvents)
      framework="CoreServices/CoreServices"
      ;;
    IOKit)
      framework="IOKit/IOKitLib"
      ;;
    *)
    framework="$framework/$framework"
    ;;
  esac

  echo $framework
}

