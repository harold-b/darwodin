VTable :: struct {
    super: NSObject.VTable,
    defaultPerformer: proc() -> ^AK.HapticFeedbackPerformer,
}

extend :: proc(cls: Class, vt: ^VTable) {
    assert(vt != nil);
    meta := ObjC.object_getClass(auto_cast cls)
    _=meta
    
    NSObject.extend(cls, &vt.super)

    if vt.defaultPerformer != nil {
        defaultPerformer :: proc "c" (self: Class, _: SEL) -> ^AK.HapticFeedbackPerformer {

            vt_ctx := ObjC.class_get_vtable_info(self)
            context = vt_ctx._context
            return (cast(^VTable)vt_ctx.super_vt).defaultPerformer()
        }

        if !class_addMethod(meta, intrinsics.objc_find_selector("defaultPerformer"), auto_cast defaultPerformer, "@#:") do panic("Failed to register objC method.")
    }
}

